#!/usr/bin/env python
import optparse
import os
import sys
sys.path.append(os.path.join(os.path.dirname(__file__), '..'))

from anygit import clisetup, models
from anygit.client import fetch

def main():
    parser = optparse.OptionParser('%prog [options] target')
    parser.add_option('-p', '--packfile', dest='packfile', default=None, help='Use a packfile on the local system')
    opts, args = parser.parse_args()
    if len(args) != 1:
        parser.print_help()
        return 1
    target  = args[0]
    r = models.Repository.get_or_create(url=target)
    models.flush()
    fetch.fetch_and_index(r, recover_mode=True, packfile=opts.packfile)

if __name__ == '__main__':
    sys.exit(main())
