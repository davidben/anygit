#!/usr/bin/env python
import os
import sys
sys.path.append(os.path.join(os.path.dirname(__file__), '..'))

from anygit import clisetup
from anygit.client import spider

def main():
    parser = optparse.OptionParser('%prog [options] {github,kernel}')
    opts, args = parser.parse_args()
    if len(args) != 1:
        parser.print_help()
        return 1
    type = args[0]
    if type == 'github':
        spider.github_spider()
    elif type == 'kernel':
        spider.kernel_spider()
    else:
        parser.print_help()
        return 2

if __name__ == '__main__':
    sys.exit(main())
