#!/usr/bin/env python
import logging.config
import optparse
import os
from paste.deploy import loadapp
import sys
conf = '/mit/gdb/web_scripts/anygit/anygit.ini'
app = loadapp('config:%s' % conf,relative_to=os.getcwd())
logging.config.fileConfig(conf)

from anygit.client import spider

def main():
    parser = optparse.OptionParser('%prog [options] {github,kernel}')
    opts, args = parser.parse_args()
    if len(args) != 1:
        parser.print_help()
        return 1
    type = args[0]
    if type == 'github':
        spider.github_spider()
    elif type == 'kernel':
        spider.kernel_spider()
    else:
        parser.print_help()
        return 2

if __name__ == '__main__':
    sys.exit(main())
